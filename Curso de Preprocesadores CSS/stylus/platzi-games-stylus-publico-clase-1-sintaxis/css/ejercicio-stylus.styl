Fuente1 = 'Lato',sans-serif
Fuente2 = 'Oswald',sans-serif
color-primario = #333333
color-secundario = #8841da
color-claro = #ffffff

contenedor()
    display flex
    width 96%
    margin 0 auto
    padding 30px 0

caja-sombra()
    background-color color-claro
    box-shadow 0 20px 33px 0 rgba(0,0,0,0.20)

opacidad(color, cantidad)
    alpha(color,cantidad)

for header in 3 2 1 
    h{header}
        font-size: 35px - (5*header)
        margin: 0

titulos(fuente)
    if fuente == Fuente1
        font-family: Fuente1
    else
        font-family: Fuente2
        font-weight: 600
        text-transform: uppercase

* 
    box-sizing border-box

body
    margin 0
    color color-primario
    titulos(Fuente1)

.buscador
    width 100%
    height 250px
    padding 100px
    background-image url("../images/cover.jpg")
    background-size cover
    text-align center
    &__input
        width 75%
        height 60px
        padding 20px
        border none 
        border-radius 30px
        font-size 25px

.encabezado--con-filtros
    contenedor()
    h2
        margin-top 10px
        text-transform uppercase
        font-weight 500
        font-size 50px
        titulos(Fuente2)
    .filtros
        width 250px
        height 75px
        padding 20px
        margin-left auto
        caja-sombra()
        span
            titulos(Fuente2)
        a
            margin-left 20px
            font-size 25px
            color color-primario

.contenido
    margin-bottom 40px
    flex-flow: row wrap
    justify-content space-evenly
    contenedor()

.caja
    max-width 400px
    caja-sombra()
    &__contenido
        padding 20px
        background-color color-claro
        span
            color color-secundario
            titulos(Fuente2)
        h3
            font-weight normal
            titulos(Fuente2)

.estadistica--articulos
    height 70px
    padding 20px
    border-top 1px solid opacidad(color-primario, 0.30)
    ul
        display flex
        margin 0
        padding 0
        justify-content space-evenly
        li
            list-style none
            color opacidad(color-primario, .30)
        span
            margin-left 10px